# Citation Count API - Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# Required: OpenAI API Key for embeddings and query generation
OPENAI_API_KEY=sk-your-openai-key-here

# Optional: Google Gemini API Key for brand profiling (if brand info not provided)
GOOGLE_API_KEY=AIzaSy-your-google-api-key-here

# Optional: Perplexity API Key for additional citation analysis
PERPLEXITY_API_KEY=pplx-your-perplexity-key-here

# Optional: Additional services for advanced features
TAVILY_API_KEY=tvly-your-tavily-key-here
FIRECRAWL_API_KEY=fc-your-firecrawl-key-here

# Optional: Azure Web PubSub for real-time progress updates
AZURE_WEBPUBSUB_HUB_NAME=your-hub-name
AZURE_WEBPUBSUB_CONNECTION_STRING=Endpoint=https://your-webpubsub.azure.com;...

# Optional: Pinecone for persistent vector storage (recommended for production)
PINECONE_API_KEY=pcsk_your-pinecone-key-here
PINECONE_INDEX_NAME=citation-analysis

# Development Settings
DEBUG=false
LOG_LEVEL=INFO